generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  nome          String
  email         String  @unique
  senha         String
  tipo          String // "cliente", "vendedor", "entregador"
  emailVerified Boolean @default(false)

  // Campos espec√≠ficos para lojas (vendedores)
  descricao String?
  telefone  String?
  endereco  String?
  foto      String?

  // Relacionamentos
  produtos  Produto[]
  favoritos Favorito[]
  historico Historico[]

  pedidosCliente Pedido[] @relation("ClientePedidos")
  pedidosLoja    Pedido[] @relation("LojaPedidos")

  chatsComoCliente  Chat[]     @relation("ChatCliente")
  chatsComoLoja     Chat[]     @relation("ChatLoja")
  mensagensEnviadas Mensagem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Produto {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  descricao  String?
  preco      Float
  quantidade Int
  imagem     String?
  categoria  String
  emEstoque  Boolean @default(true)

  vendedorId String @db.ObjectId
  vendedor   User   @relation(fields: [vendedorId], references: [id])

  favoritadoPor Favorito[]
  vistoPor      Historico[]
  itensPedido   ItemPedido[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Favorito {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  produtoId String   @db.ObjectId
  produto   Produto  @relation(fields: [produtoId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, produtoId])
}

model Historico {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  produtoId String   @db.ObjectId
  produto   Produto  @relation(fields: [produtoId], references: [id])
  vistoEm   DateTime @default(now())
}

model Pedido {
  id        String       @id @default(auto()) @map("_id") @db.ObjectId
  clienteId String       @db.ObjectId
  cliente   User         @relation("ClientePedidos", fields: [clienteId], references: [id])
  lojaId    String       @db.ObjectId
  loja      User         @relation("LojaPedidos", fields: [lojaId], references: [id])
  status    String       @default("pendente")
  total     Float
  itens     ItemPedido[]
  chat      Chat?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model ItemPedido {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  pedidoId   String  @db.ObjectId
  pedido     Pedido  @relation(fields: [pedidoId], references: [id])
  produtoId  String  @db.ObjectId
  produto    Produto @relation(fields: [produtoId], references: [id])
  quantidade Int
  precoUnit  Float
}

model Chat {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  pedidoId  String     @unique @db.ObjectId
  pedido    Pedido     @relation(fields: [pedidoId], references: [id])
  clienteId String     @db.ObjectId
  cliente   User       @relation("ChatCliente", fields: [clienteId], references: [id])
  lojaId    String     @db.ObjectId
  loja      User       @relation("ChatLoja", fields: [lojaId], references: [id])
  ativo     Boolean    @default(true)
  mensagens Mensagem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Mensagem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId    String   @db.ObjectId
  chat      Chat     @relation(fields: [chatId], references: [id])
  autorId   String   @db.ObjectId
  autor     User     @relation(fields: [autorId], references: [id])
  texto     String
  lida      Boolean  @default(false)
  createdAt DateTime @default(now())
}
